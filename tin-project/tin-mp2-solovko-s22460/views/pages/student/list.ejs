<%- include('../../fragment/header.ejs') %>

<main>
    <h2>Students Information</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>FirstName</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% for (let student of students) { %>
            <tr>
                <td><%= student.firstName %></td>
                <td><%= student.email %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/student/details/<%= student._id %>" class="list-actions-button-details">Details</a>
                        </li>
                        <li>
                            <a href="/student/edit/<%= student._id %>" class="list-actions-button-edit">Edit</a>
                        </li>
                        <li>
                            <a href="/student/delete/<%= student._id %>" class="list-actions-button-delete">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
    <div>
        <p></p>
        <a href="/student/add" class="button-add">Add new Student</a>

    </div>

</main>

<%- include('../../fragment/footer.ejs') %>