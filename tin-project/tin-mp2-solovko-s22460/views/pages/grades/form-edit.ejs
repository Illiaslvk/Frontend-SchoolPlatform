<%- include('../../fragment/header.ejs') %>

    <main>
      <h2>Edit Student</h2>
      <form class="form">

        <label for="StudentName">Student Name: <span class="symbol-required">*</span></label>
         <select name="StudentName" id="StudentName" required>
            <option value="">--Student Name--</option>
            <option selected value="5">Vitka</option>
        </select> 
        <span id="errorGrade" class="errors-text"></span>

        <label for="TeacherName">Teacher Name: <span class="symbol-required">*</span></label>
         <select name="TeacherName" id="TeacherName" required>
            <option value="">--TeacherName--</option>
            <option selected value="5">Jamal</option>
        </select> 
        <span id="errorGrade" class="errors-text"></span>

        <label for="PESEL">PESEL: <span class="symbol-required">*</span></label>
        <input type="text" name="PESEL" id="PESEL" value="993" required>
        <span id="errorPESEL" class="errors-text"></span>

        <label for="Subject">Subject: <span class="symbol-required">*</span></label>
        <input type="text" name="Subject" id="Subject" value="Math" required>
        <span id="errorSubject" class="errors-text"></span>

        <label for="Grade">Grade: <span class="symbol-required">*</span></label>
        <input type="text" name="Grade" id="Grade" value="5" required>
        <span id="errorGrade" class="errors-text"></span>

        <div class="form-buttons">
            <input type="submit" class="form-button-submit" value="Add" />
            <a href="/grades" class="form-button-cancel">Cancel</a>
        </div>
    </form>
    </main>

<%- include('../../fragment/footer.ejs') %>